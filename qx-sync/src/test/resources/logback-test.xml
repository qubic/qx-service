<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <include resource="org/springframework/boot/logging/logback/defaults.xml" />
   <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

  <logger name="ch.qos.logback" level="WARN"/>
  <logger name="at.qubic.api.computor" level="WARN"/>
  <logger name="at.qubic.api.computor.node" level="WARN"/>
  <logger name="at.qubic.api.computor.tcp" level="INFO"/>
  <logger name="org.springframework" level="WARN"/>
  <logger name="org.qubic" level="DEBUG"/>

  <logger name="reactor.Flux" level="INFO"/>
  <logger name="reactor.Mono" level="INFO"/>

  <root level="WARN" >
    <appender-ref ref="CONSOLE"/>
  </root>

</configuration>